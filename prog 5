#include <iostream>
#include <climits>
using namespace std;

int main() {
    // Declaration
    int n, sf = 0, N = 0;
    int x[n], f[n], cf[n];
    
    // Entering the number of elements
    cout << "Enter the number of elements: ";
    cin >> n;
    
   
    
    // Entering the elements, variables, and calculating CF
    for (int i = 0; i < n; ++i) {
        cout << "Variable " << i + 1 << ": ";
        cin >> x[i];
        
        cout << "Frequency " << i + 1 << ": ";
        cin >> f[i];
        N += f[i];
        
        cf[i] = N;
        cout << "CF " << i + 1 << ": " << cf[i] << endl;
    }
    
    double med = (N+1) / 2;
   /* cout << "SUM: " << sf << endl;8*/
    
    // Finding the median
    int median = 0;
    for (int i = 0; i < n; ++i) {
        if (cf[i] >= med)
        {
            median = x[i];
            break;
        }
    }
    cout << "Median: " << median << endl;
    return 0;
}
