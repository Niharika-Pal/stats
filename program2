#include <iostream>
using namespace std;
int main()
{
    int n = 0.0;
    double sum = 0.0;
    int N = 0;
    cout<< "Enter the number of elements of series :";
    cin>> n;

    cout<<"Enter elements and their frequency repsectively : "<<endl;
    for (int i =0; i<n; ++i)
    {
        double num;
        int freq;
        cout<<"Element "<<(i+1)<< ":";
        cin>>freq;
        sum += num*freq;
        N+= freq;
    }
    double mean = sum/N;
    cout<< "The Arithmetic Mean of the series is : "<<mean<<endl;

    return 0;
    }
